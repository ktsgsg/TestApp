<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/button_num1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_result"
        app:layout_constraintEnd_toStartOf="@id/button_num2"
        />
    <Button
        android:id="@+id/button_num2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/button_num1"
        app:layout_constraintTop_toTopOf="@id/button_num1"
        app:layout_constraintEnd_toStartOf="@id/button_num3"
        />
    <Button
        android:id="@+id/button_num3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/button_num2"
        app:layout_constraintTop_toTopOf="@id/button_num2"
        app:layout_constraintEnd_toStartOf="@id/button_num4"
        />
    <Button
        android:id="@+id/button_num4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/button_num3"
        app:layout_constraintTop_toTopOf="@id/button_num3"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/button_num1_2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_num1"
        app:layout_constraintEnd_toStartOf="@id/button_num2_2"
        />
    <Button
        android:id="@+id/button_num2_2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/button_num1_2"
        app:layout_constraintTop_toTopOf="@id/button_num1_2"
        app:layout_constraintEnd_toStartOf="@id/button_num3_2"
        />
    <Button
        android:id="@+id/button_num3_2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/button_num2_2"
        app:layout_constraintTop_toTopOf="@id/button_num2_2"
        app:layout_constraintEnd_toStartOf="@id/button_num4_2"
        />
    <Button
        android:id="@+id/button_num4_2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="x"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/button_num3_2"
        app:layout_constraintTop_toTopOf="@id/button_num3_2"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/button_num1_3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_num1_2"
        app:layout_constraintEnd_toStartOf="@id/button_num2_3"
        />
    <Button
        android:id="@+id/button_num2_3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/button_num1_3"
        app:layout_constraintTop_toTopOf="@id/button_num1_3"
        app:layout_constraintEnd_toStartOf="@id/button_num3_3"
        />
    <Button
        android:id="@+id/button_num3_3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/button_num2_3"
        app:layout_constraintTop_toTopOf="@id/button_num2_3"
        app:layout_constraintEnd_toStartOf="@id/button_num4_3"
        />
    <Button
        android:id="@+id/button_num4_3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/button_num3_3"
        app:layout_constraintTop_toTopOf="@id/button_num3_3"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/button_num1_4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="AC"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_num1_3"
        app:layout_constraintEnd_toStartOf="@id/button_num2_4"
        />

    <Button
        android:id="@+id/button_num2_4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/button_num1_4"
        app:layout_constraintTop_toTopOf="@id/button_num1_4"
        app:layout_constraintEnd_toStartOf="@id/button_num3_4"
        />
    <Button
        android:id="@+id/button_num3_4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/button_num2_4"
        app:layout_constraintTop_toTopOf="@id/button_num2_4"
        app:layout_constraintEnd_toStartOf="@id/button_num4_4"
        />
    <Button
        android:id="@+id/button_num4_4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/button_num3_4"
        app:layout_constraintTop_toTopOf="@id/button_num3_4"
        app:layout_constraintEnd_toEndOf="parent"
        />









</androidx.constraintlayout.widget.ConstraintLayout>